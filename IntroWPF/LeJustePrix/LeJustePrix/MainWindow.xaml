<Window x:Class="LeJustePrix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeJustePrix"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Le Juste Prix" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0"/>
        <TextBlock TextWrapping="Wrap" Text="Quel est le prix d'un jeu ?" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,167,0,0"/>
        <TextBox Name="Find" TextWrapping="Wrap" Text="" Width="120" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,195,0,0"/>
        <Button Name="findBtn" Content="Deviné" Click="JustPrice" ClickMode="Press" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,221,0,0" Width="120"/>
        <TextBlock Name="Indice" TextWrapping="Wrap" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,249,0,0" Width="178" Height="30" TextAlignment="Center"/>
        <TextBlock Name="Tenta" TextWrapping="Wrap" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,284,0,0" Width="178" Height="30" TextAlignment="Center"/>
    </Grid>
</Window>
